generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String       @id @default(cuid()) @map("_id")
  name      String
  email     String       @unique
  password  String
  address   String
  phone     Int
  role      String       @default("user")
  createdAt DateTime     @default(now())
  carts     Cart[]
}

model Articles {
  id        String       @id @default(cuid()) @map("_id")
  title     String
  content   String
  price     Int
  image     String
  tags      String[]
  createdAt DateTime     @default(now())
  carts     Cart[]
}

model Tags {
  id        String       @id @default(cuid()) @map("_id")
  name      String
  createdAt DateTime     @default(now())
}

model Cart {
  id        String       @id @default(cuid()) @map("_id")
  user      Users?       @relation(fields: [userId], references: [id])
  userId    String?
  article   Articles?    @relation(fields: [articleId], references: [id])
  articleId String?
  quantity  Int
  createdAt DateTime     @default(now())
}
